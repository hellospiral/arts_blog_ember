{{#if updateCommentForm}}
  <h4>Update comment</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="username">Username</label>
        {{input value=username id="username" placeholder=comment.username}}
      </div>

      <div class="form-group">
        <label for="text">Comment</label>
        {{input value=text id="text" placeholder=comment.text}}
      </div>
      <button {{action 'update' comment}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateCommentForm'}}>Update</button>
{{/if}}
