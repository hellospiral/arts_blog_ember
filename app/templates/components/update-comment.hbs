{{#if updateCommentForm}}
  <h4>Update comment</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="username">Username</label>
        {{input class="form-control" value=username id="username" placeholder=comment.username}}
      </div>

      <div class="form-group">
        <label for="text">Comment</label>
        {{input class="form-control" value=text id="text" placeholder=comment.text}}
      </div>
      <button class="btn btn-success btn-outline btn-sm"{{action 'update' comment}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-warning btn-outline btn-sm" {{action 'updateCommentForm'}}>Update Comment</button>
{{/if}}
