{{#if updatePostForm}}
  <h4>Update Entry</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input class="form-control" value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author id="author" placeholder=post.author}}
      </div>

      <div class="form-group">
        <label for="photo">Photo URL</label>
        {{input class="form-control" value=photo id="photo" placeholder=post.photo}}
      </div>

      <div class="form-group">
        <label for="body">Article Text</label>
        {{input class="form-control" value=body id="body" placeholder=post.body}}
      </div>
      <button class="btn btn-success btn-outline btn-sm" {{action 'update' post}}>Save</button>
      <button type="button" class="btn btn-outline btn-info btn-sm" {{action 'updateFormHide'}}>Hide</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-warning btn-outline btn-sm" {{action 'updatePostForm'}}>Update</button>
{{/if}}
